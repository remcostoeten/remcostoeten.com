{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"pages/_Login.tsx",
		"pages/Login.js",
		"pages/Chat/ChatTest.tsx",
		"pages/Chat/chatNavigation.js",
		"pages/Chat/BlogPostList.jsx",
		"pages/Chat/backups/WerkendeReactWindow.js",
		"pages/Chat/backups/window.js",
		"pages/Chat/Test.js",
		"components/header/Logo.js",
		"pages/Authentication/index.js",
		"components/Alertjs",
		"pages/withAuth.js",
		"components/Messenger/Friends.js",
		"base.js"
	],
	"exclude": ["node_modules"]
}
